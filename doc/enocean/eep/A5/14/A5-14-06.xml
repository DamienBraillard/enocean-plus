<eep>
  <profile>
    <rorg>
      <number>0xA5</number>
      <title>4BS Telegram</title>
      <telegram>4BS</telegram>
      <func>
        <number>0x14</number>
        <title>Multi-Func Sensor</title>
        <type>
          <number>0x06</number>
          <title>Vibration/Tilt, Illumination and Supply voltage monitor</title>
          <status>released</status>
          <description><span style="background-color:#CDFF7D;border-bottom:2px groove #000000;font-style:italic;">Submitter: Lutuo Technology</span><br/><br/>
          Purpose (eg): Intrusion (breakage of glass), Calling system
          </description>
          <case>
            <datafield>
              <data>LRN Bit</data>
              <shortcut>LRNB</shortcut>
              <description>LRN Bit</description>
              <bitoffs>28</bitoffs>
              <bitsize>1</bitsize>
              <enum>
                <item>
                  <value>0</value>
                  <description>Teach-in telegram</description>
                </item>
                <item>
                  <value>1</value>
                  <description>Data telegram</description>
                </item>
              </enum>
            </datafield>
            <datafield>
              <data>Supply voltage</data>
              <shortcut>SVC</shortcut>
              <description>Supply voltage / super cap. (linear);<br/>251 &#8211; 255 reserved for error code
              </description>
              <info/>
              <bitoffs>0</bitoffs>
              <bitsize>8</bitsize>
              <range>
                <min>0</min>
                <max>250</max>
              </range>
              <scale>
                <min>0</min>
                <max>5.0</max>
              </scale>
              <unit>V</unit>
            </datafield>
            <datafield>
              <data>Illumination</data>
              <shortcut>ILL</shortcut>
              <description>Illumination (linear);<br/>251 &#8211; over range, 252 - 255 reserved
              </description>
              <info/>
              <bitoffs>8</bitoffs>
              <bitsize>8</bitsize>
              <range>
                <min>0</min>
                <max>250</max>
              </range>
              <scale>
                <min>0</min>
                <max>1000</max>
              </scale>
              <unit>lx</unit>
            </datafield>
            <datafield>
              <reserved/>
              <bitoffs>16</bitoffs>
              <bitsize>12</bitsize>
            </datafield>
            <datafield>
              <reserved/>
              <bitoffs>29</bitoffs>
              <bitsize>1</bitsize>
            </datafield>
            <datafield>
              <reserved/>
              <bitoffs>31</bitoffs>
              <bitsize>1</bitsize>
            </datafield>
            <datafield>
              <data>Vibration</data>
              <shortcut>VIB</shortcut>
              <description/>
              <bitoffs>30</bitoffs>
              <bitsize>1</bitsize>
              <enum>
                <item>
                  <value>0b0</value>
                  <description>No vibration detected</description>
                </item>
                <item>
                  <value>0b1</value>
                  <description>Vibration detected</description>
                </item>
              </enum>
            </datafield>
          </case>
        </type>
      </func>
    </rorg>
  </profile>
</eep>
